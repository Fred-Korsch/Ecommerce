<div class="container">
  <h2 class="page-header">Adicionar Produto</h2>

  <div class="col-md-6">
    <%= form_for @product, url: {action: "create"}, html: {class:"form-horizontal"} do |f| %>
      <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Nome</label>
        <div class="col-sm-10">
          <%= f.text_field :title, class:"form-control", placeholder: "Nome" %>
        </div>
      </div>

      <div class="form-group">
        <label for="briefing" class="col-sm-2 control-label">Chamada</label>
        <div class="col-sm-10">
          <%= f.text_area :briefing, class: "form-control", placeholder: "Chamada", size: "60x6" %>
        </div>
      </div>

      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Descrição</label>
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", placeholder: "Descrição", size: "60x12" %>
        </div>
      </div>

      <div class="form-group">
        <label for="price" class="col-sm-2 control-label">Preço</label>
        <div class="col-sm-10">
          <%= f.text_field :price, class: "form-control", placeholder: "0,00" %>
        </div>
      </div>

      <div class="form-group">
        <label for="quantity" class="col-sm-2 control-label">Qtda</label>
        <div class="col-sm-10">
          <%= f.text_field :qtd, class: "form-control", placeholder: 0 %>
        </div>
      </div>

      <%= f.submit "Cadastrar", class: "btn btn-success pull-right" %>

    <% end %>
  </div>
</div>
